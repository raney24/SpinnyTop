# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'SpinnyTop' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for SpinnyTop
  
  # Pods for Firebase
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  
  # Pods for Facebook SDK
  pod 'Bolts'
  pod 'FBSDKCoreKit'
  pod 'FBSDKLoginKit'

  target 'SpinnyTopTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Firebase'
  end

  target 'SpinnyTopUITests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Firebase'
  end

end
